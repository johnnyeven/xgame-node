<!DOCTYPE html> 
<html>
  <head>
    <title>Xgame</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }

      .content {
        margin-top: 50px;
        margin-bottom: 50px;
      }

      .planets {
        height:300px;
        overflow: hidden;
        padding:0;
        position:relative;
      }

      .planets-info {
        width:400px;
        height:100px;
        position:absolute;
        bottom:0;
        right:0;
        -webkit-border-radius:5px 0 0 0;
        -moz-border-radius:5px 0 0 0;
        border-radius:5px 0 0 0;
        background:#141E28;
        filter: alpha(opacity=60);
        -moz-opacity: .6;
        -khtml-opacity: .6;
        opacity: .6;
        z-index: 1;
      }

      .planets-info-content {
        width:390px;
        height:90px;
        position:absolute;
        bottom:0;
        right:0;
        padding: 5px;
        z-index: 2;
      }

      .planets-info-content table {
        width:100%;
        font-size: 12px;
      }

      .planets-info-content table th {
        width:30%;
        text-align: left;
        padding: 4px;
        color:#6F9FCD;
      }

      .planets-info-content table td {
        width:70%;
        text-align: right;
        padding: 4px;
        color:#FFF;
      }

      .planets-name {
        width:500px;
        height:40px;
        position:absolute;
        top:5px;
        right:5px;
        -webkit-border-radius:5px;
        -moz-border-radius:5px;
        border-radius:5px;
        background:#141E28;
        filter: alpha(opacity=60);
        -moz-opacity: .6;
        -khtml-opacity: .6;
        opacity: .6;
        z-index: 3;
      }

      .planets-name-content {
        color:#FFF;
        width:480px;
        height:30px;
        line-height: 30px;
        font-size: 20px;
        position:absolute;
        top:5px;
        right:5px;
        padding: 5px 10px;
        z-index: 4;
      }
    </style>
    <link href="/stylesheets/bootstrap-responsive.css" rel="stylesheet">
    <link href="/stylesheets/smoothness/jquery-ui.min.css" rel="stylesheet">
    <link href="/stylesheets/public.css" rel="stylesheet">
    <link href="/stylesheets/planet.css" rel="stylesheet">
  </head>
  <body>
    <%- include ../user_nav %>
    <div id="planet_id" style="display:none"><%= planet.id %></div>
    <div id="building_id" style="display:none"></div>
    <div id="container" class="container">
      <div class="row content">
        <div class="span2">
          <ul class="nav nav-pills nav-stacked">
            <li><a href="/game/overview">Overview</a></li>
            <li class="active"><a href="/game/planets">Planets</a></li>
            <li><a href="#">Science</a></li>
            <li><a href="#">Fleets</a></li>
          </ul>
        </div>
        <div class="span10">
          <div class="navbar navbar-inverse">
            <div class="navbar-inner">
              <a class="brand" style="padding-top:25px"><%= locals.role.role_name %><small> (<%= species %>)</small></a>
              <ul class="nav">
                <li class="divider-vertical" style="height:72px;"></li>
                <li><a>
                  <div><img src="/images/resources_titanium.png" /></div>
                  <div class="text-center"><strong><%= locals.role.resources.titanium %></strong></div>
                </a></li>
                <li><a>
                  <div><img src="/images/resources_crystal.png" /></div>
                  <div class="text-center"><strong><%= locals.role.resources.crystal %></strong></div>
                </a></li>
                <li><a>
                  <div><img src="/images/resources_hydrogen.png" /></div>
                  <div class="text-center"><strong><%= locals.role.resources.hydrogen %></strong></div>
                </a></li>
                <li><a>
                  <div><img src="/images/resources_water.png" /></div>
                  <div class="text-center"><strong><%= locals.role.resources.water %></strong></div>
                </a></li>
                <li><a>
                  <div><img src="/images/resources_organics.png" /></div>
                  <div class="text-center"><strong><%= locals.role.resources.organics %></strong></div>
                </a></li>
              </ul>
            </div>
          </div>
          <div class="row-fluid">
            <div class="thumbnail planets" style="background:url(/images/planet/image/<%= planet.id %>_land.png) no-repeat;">
              <div class="planets-name"></div>
              <div class="planets-name-content">概况 - <%= planet.name %></div>
              <div class="planets-info"></div>
              <div class="planets-info-content">
                <table>
                  <tr>
                    <th>直径</th>
                    <td><%= planet.diameter %>公里(1/163)</td>
                  </tr>
                  <tr>
                    <th>气温</th>
                    <td><%= planet.temperature.min %>°C 至 <%= planet.temperature.max %>°C</td>
                  </tr>
                  <tr>
                    <th>所在位置</th>
                    <td><%= planet.position.x %> &gt; <%= planet.position.y %> &gt; <%= planet.position.z %> &gt; <%= planet.position.index %></td>
                  </tr>
                </table>
              </div>
            </div>
            <hr />
            <h3>资源</h3>
            <ul class="thumbnails buildings">
              <% for(var i = 0; i < buildings.resources.length; i++) { %>
              <li>
                <% if(planet.buildings_limit.resources.indexOf(buildings.resources[i]) >= 0) { %>
                <a href="#<%= buildings.resources[i] %>" class="thumbnail"><div class="resource_building <%= buildings.resources[i] %>">
                  <div class="resource_building_info text-right">
                    <h6>
                    <%
                    var b = locals.find_buildings_by_id(buildings.resources[i], planet.buildings);
                    if(b) {
                    %>
                    <%= b.level %>
                    <% } else { %>
                    0
                    <% } %>
                    </h6>
                  </div>
                </div></a>
                <% } else { %>
                <a class="thumbnail"><div class="resource_building resource_disabled <%= buildings.resources[i] %>"></div></a>
                <% } %>
              </li>
              <% } %>
            </ul>
            <hr />
            <h3>设施</h3>
            <ul class="thumbnails buildings">
              <% for(var i = 0; i < buildings.functions.length; i++) { %>
              <li>
                <% if(planet.buildings_limit.functions.indexOf(buildings.functions[i]) >= 0) { %>
                <a href="#<%= buildings.functions[i] %>" class="thumbnail"><div class="resource_building <%= buildings.functions[i] %>"></div></a>
                <% } else { %>
                <a class="thumbnail"><div class="resource_building resource_disabled <%= buildings.functions[i] %>"></div></a>
                <% } %>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    <%- include ../std_footer %>
    </div>
    <div id="building_info" title="Building information">
      <div id="building_info_progress" class="progress progress-striped active" style="margin-top:30px;">
        <div class="bar" style="width: 100%;"></div>
      </div>
      <div id="building_info_content" class="row-fluid" style="display:none;">
        <div class="row-fluid">
          <div class="span7 building_info_attr">
            <h3></h3>
            <hr />
            <div class="row-fluid">
              <div class="span6">
                <h5>目前产量</h5>
                <table class="table" id="building_info_attr_product">
                  <tr class="production_titanium">
                    <th>钛合金产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_crystal">
                    <th>晶体产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_hydrogen">
                    <th>氚氢气产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_water">
                    <th>水产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_organics">
                    <th>有机物产量</th>
                    <td>0</td>
                  </tr>
                </table>
              </div>
              <div class="span6">
                <h5>下一级产量</h5>
                <table class="table" id="building_info_attr_product_next">
                  <tr class="production_titanium_next">
                    <th>钛合金产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_crystal_next">
                    <th>晶体产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_hydrogen_next">
                    <th>氚氢气产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_water_next">
                    <th>水产量</th>
                    <td>0</td>
                  </tr>
                  <tr class="production_organics_next">
                    <th>有机物产量</th>
                    <td>0</td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
          <div class="span5 building_info_comment">
            <p></p>
          </div>
        </div>
        <div class="row-fluid text-center">
          <button id="btn_upgrade" class="btn btn-success">Upgrade</button>
        </div>
      </div>
    </div>
  </body>
  <script src="/javascripts/jquery.min.js"></script>
  <script src="/javascripts/bootstrap.js"></script>
  <script src="/javascripts/planet.js"></script>
  <script src="/javascripts/jquery-ui.min.js"></script>
</html>